<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Login.SignupTypeActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable type="Login.LoginActivity" name="activity"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:padding="12dp"
                android:src="@drawable/icon_back" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="85dp"
                android:layout_marginTop="78dp"
                android:layout_marginBottom="78dp"
                android:layout_gravity="center"
                android:src="@drawable/logo01" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ems="10"
                android:hint="abc1234@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textSize="12sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/gradient_button"
                android:layout_marginTop="41dp"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:onClick="@{activity::Click_Login}"/>

            <Button
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_button"
                android:text="비밀번호"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:onClick="@{activity::To_Signup_Page}"/>

        </LinearLayout>






    </LinearLayout>



</layout>